regex @`\bfor ([a-zA-Z]\w*) in (\d+)\.{3}(\d+)(?:: do)?\b` FOR $1 FROM $2 TO $3 DO
regex @`\bloop\b` WHILE 1 DO

regex @`\(([^?]+)\?(.+):(.+)\)` IFTE($1, $2, $3)
regex @`< *int *> *\((.*)\)` IP($1)
regex @`< *int *> *([a-zA-Z_]\w*)\b` IP($1)
