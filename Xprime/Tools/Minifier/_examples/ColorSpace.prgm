EXPORT HSVtoRGB( h, s, v )
BEGIN
  LOCAL  hh, ss, vv, f, p, q, t;
  
  h := h MOD 360;
  IF h < 0 THEN h := h + 360; END;
  
  hh := h / 60;
  ss := MIN(MAX(s, 0), 100) / 100;
  vv := MIN(MAX(v, 0), 100) / 100;

  LOCAL i, r, g, v;

  i := FLOOR(hh);
  f := hh - i;
  p := vv * (1 - ss);
  q := vv * (1 - ss * f);
  t := vv * (1 - ss * (1 - f));

  IF i == 0 THEN
    r := vv; g := t; v := p;
  END;
  IF i == 1 THEN
    r := q; g := vv; v := p;
  END;
  IF i == 2 THEN
    r := p; g := vv; v := t;
  END;
  IF i == 3 THEN
    r := p; g := q; v := vv;
  END;
  IF i == 4 THEN
    r := t; g := p; v := vv;
  END;
  IF i == 5 THEN
    r := vv; g := p; v := q;
  END;

  RETURN {   IP(r * 255), IP(g * 255), IP(v * 255)   };
END;

