BEGIN
  LOCAL rgb;
  
  rgb := HSLtoRGB(h, s, l);
  RGB(rgb[1], rgb[2], rgb[3]);
END;

EXPORT HSV(h, s, v)
BEGIN
  LOCAL rgb;
  
  rgb := HSVtoRGB(h, s, v);
  RGB(rgb[ 1 ], rgb[ 2 ], rgb[ 3 ]);
END;

EXPORT CMYK(c, m, y, k)
BEGIN
  LOCAL r,g,b;
  
  r = 255 * (1-c/100) * (1-k/100);
  g = 255 * (1-m/100) * (1-k/100);
  b = 255 * (1-y/100) * (1-k/100);
  RGB(IP(r), IP(g), IP(b));
END;
